# ===========================================
# NightmareMart Environment Configuration
# ===========================================
# This file documents all required environment variables.
# Copy this to .env and fill in your values.

APP_NAME=NightmareMart
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# ===========================================
# Logging Configuration
# ===========================================
# WARNING: In production, set LOG_LEVEL to 'warning' or 'error'
# Episode 8 demonstrates what happens when debug logging is left on
LOG_CHANNEL=single
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# Database Configuration
# ===========================================
DB_CONNECTION=sqlite
# For MySQL (optional):
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=nightmare_mart
# DB_USERNAME=root
# DB_PASSWORD=

# ===========================================
# Session & Cache Configuration
# ===========================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=file

# ===========================================
# Queue Configuration
# ===========================================
# Episode 1: Queue driver differences between local and production
# Local uses 'sync', production should use 'database'
QUEUE_CONNECTION=sync

# ===========================================
# Shop Configuration
# ===========================================
# Episode 1: These values MUST be accessed via config(), not env()
# Using env() directly will break when config:cache is run
TAX_RATE=0.08
SHOP_NAME="NightmareMart"
SHOP_CURRENCY=USD
SHOP_ITEMS_PER_PAGE=20

# ===========================================
# Mail Configuration (for order receipts)
# ===========================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@nightmaremart.test"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# AWS (optional, for file storage)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# Debugging Tools
# ===========================================
DEBUGBAR_ENABLED=true
